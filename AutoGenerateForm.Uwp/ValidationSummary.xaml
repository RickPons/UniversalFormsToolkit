<UserControl
    x:Class="AutoGenerateForm.Uwp.ValidationSummary"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="myValidationSummary"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid>
        <ListView
            x:Name="listView"
            Grid.Row="1"
            Margin="0,12,12,0"
            IsItemClickEnabled="True"
            ItemClick="listView_ItemClick"
            ItemsSource="{Binding ValidationCollection, ElementName=myValidationSummary, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock
                            Margin="0,12,0,0"
                            Foreground="Red"
                            Text="{Binding Label, Mode=TwoWay}" />
                        <TextBlock
                            Margin="0,12,0,0"
                            FontSize="11"
                            Text="{Binding ErrorMessage, Mode=TwoWay}"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>

